<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="6dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/lnCliente">
        <TextView
            android:id="@+id/registrarNuevMedida"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/purple_500"
            android:text="Registrar Nuevo Medidor"
            android:layout_gravity="right"
            android:layout_marginTop="6dp"
            android:layout_marginStart="6dp"
            android:textStyle="bold"
            android:layout_marginEnd="6dp"
            android:justificationMode="inter_word"
            android:lineSpacingMultiplier="1.2"
            android:textSize="20sp"
            android:fontFamily="sans-serif-light"/>

        <TextView
            android:id="@+id/nombreCliente"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-light"/>

        <TextView
            android:id="@+id/cedulaCliente"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_marginTop="6dp"
            android:layout_marginStart="6dp"
            android:layout_marginEnd="6dp"
            android:textSize="18sp"
            android:fontFamily="sans-serif-light"/>
        <TextView
            android:id="@+id/direccionCliente"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_marginTop="6dp"
            android:layout_marginStart="6dp"
            android:layout_marginEnd="6dp"
            android:justificationMode="inter_word"
            android:lineSpacingMultiplier="1.2"
            android:textSize="18sp"
            android:fontFamily="sans-serif-light"/>
        <TextView
            android:id="@+id/registrarLectura"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:visibility="gone"
            android:text="Registrar lectura"
            android:layout_gravity="right"
            android:layout_marginTop="6dp"
            android:layout_marginStart="6dp"
            android:layout_marginEnd="6dp"
            android:justificationMode="inter_word"
            android:lineSpacingMultiplier="1.2"
            android:textSize="18sp"
            android:fontFamily="sans-serif-light"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:background="#F4F4F4"></LinearLayout>

    </LinearLayout>
</RelativeLayout>
