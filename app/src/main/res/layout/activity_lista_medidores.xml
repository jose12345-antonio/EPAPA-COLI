<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Lista_medidores">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/nombreAsig"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tempora Esmeralda Sanchez Deker"
            android:textSize="20sp"
            android:textColor="@color/purple_500"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:padding="10dp"/>

        <TextView
            android:id="@+id/cedulaAsig"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cedula: 12012312948"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:textStyle="normal"
            android:layout_gravity="center"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="10dp"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewListaMedidor"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"></androidx.recyclerview.widget.RecyclerView>


    </LinearLayout>

</RelativeLayout>